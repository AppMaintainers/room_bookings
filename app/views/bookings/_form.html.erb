
<%= render "shared/errors", obj: @booking %>

<div class="row justify-content-center">
<div class="col-sm-8 col-lg-6">


<%= form_for @booking do |b| %>
  <div class="form-group row">
    <%= b.label :room, class: "col-sm-2 col-form-label" %>
    <div class="col sm-6">
      <%= b.text_field :room, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= b.label :start, class: "col-sm-2 col-form-label" %>
    <div class="col sm-6">
      <%= b.date_field :start, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= b.label :end, class: "col-sm-2 col-form-label" %>
    <div class="col sm-6">
      <%= b.date_field :end, class: "form-control" %>
    </div>
  </div>
  <div class="btn-holder">
    <%= b.submit class: "btn btn-primary mt-4" %>
  </div>
<% end %>

<div class="btn-holder">
  <%= link_to "Back", bookings_path, class: "btn btn-secondary mt-4" %>
</div>

</div>
</div>
